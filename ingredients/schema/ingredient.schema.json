{
  "$id": "https://github.com/duaneking/BakeSpace/tree/master/ingredients/ingredient.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ingredient Item",
  "description": "An ingredient.",
  "type": "object",
  "properties": {
    "iuid": {
		"type": "string",
		"format": "uuid",
		"description": "The UUIDv4 primary key of the ingredent."
    },
    "key": {
		"type": "string",
		"description": "The namespace/parent path key of the ingredent."
    },
    "name": {
		"type": "string",
		"description": "The name of the ingredent."
    }
  },
  "required": [ "iuid", "key", "name" ],
  "additionalProperties": false
}
