{
  "$id": "https://github.com/duaneking/BakeSpace/tree/master/ingredients/ingredient.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ingredient Item",
  "description": "An ingredient.",
  "type": "object",
  "properties": {
    "iuid": {
		"type": "string",
		"format": "uri",
		"pattern": "^urn:uuid:"
    },
    "name": {
      "type": "string",
      "description": "The name of the ingredent."
    }
  }
  "required": [ "iuid", "name" ],
  "additionalProperties": false
}
